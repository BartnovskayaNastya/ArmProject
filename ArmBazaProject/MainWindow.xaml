                            <TabControl Grid.Row="1">
                                <TabItem Header="Мужчины">
                                    <local1:SummaryProtocolTableTemplate x:Name="resultProtocolB" DataContext="{Binding}"></local1:SummaryProtocolTableTemplate>
                                </TabItem>
                                <TabItem Header="Женщины">
